@model List<ECommerce.BLL.DTO.ProductDTO>
@{
    ViewData["Title"] = "Products - TechShop";
}

<div class="container py-5 fade-in">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold mb-3">Our Products</h1>
            <p class="lead text-muted">Browse our wide selection of tech products. Find exactly what you need at the best prices.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="d-inline-block bg-primary text-white p-3 rounded-3">
                <h4 class="mb-0">@Model.Count Products</h4>
                <small class="opacity-75">Available for purchase</small>
            </div>
        </div>
    </div>
    
    <!-- Category Filter (Placeholder) -->
    <div class="mb-5">
        <h5 class="mb-3">Filter by Category:</h5>
        <div class="d-flex flex-wrap gap-2">
            <button class="btn btn-outline-primary active" data-category="all">All</button>
            <button class="btn btn-outline-primary" data-category="Electronics">Electronics</button>
            <button class="btn btn-outline-primary" data-category="Computers">Computers</button>
            <button class="btn btn-outline-primary" data-category="Audio">Audio</button>
            <button class="btn btn-outline-primary" data-category="Accessories">Accessories</button>
        </div>
    </div>
    
    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-box-open fa-4x text-muted mb-4"></i>
            <h3>No Products Available</h3>
            <p class="text-muted mb-4">Check back later for new arrivals.</p>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    }
    else
    {
        <!-- Products Grid -->
        <div class="row g-4" id="productsGrid">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6" data-category="@product.Category">
                    <div class="card product-card h-100">
                        <!-- Product Image -->
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top product-img" alt="@product.Name">
                            }
                            else
                            {
                                <div class="card-img-top product-img d-flex align-items-center justify-content-center bg-gradient-primary">
                                    <i class="fas fa-box fa-4x text-white"></i>
                                </div>
                            }
                            
                            <!-- Stock Badge -->
                            @if (product.StockQuantity > 10)
                            {
                                <span class="position-absolute top-0 end-0 m-3 badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i> In Stock
                                </span>
                            }
                            else if (product.StockQuantity > 0)
                            {
                                <span class="position-absolute top-0 end-0 m-3 badge bg-warning">
                                    <i class="fas fa-exclamation-circle me-1"></i> Low Stock
                                </span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 end-0 m-3 badge bg-danger">
                                    <i class="fas fa-times-circle me-1"></i> Out of Stock
                                </span>
                            }
                            
                            <!-- Category Badge -->
                            <span class="position-absolute top-0 start-0 m-3 category-badge">
                                @product.Category
                            </span>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <!-- Product Info -->
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">@product.Description</p>
                            
                            <!-- Price and Stock -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <span class="product-price">$@product.Price.ToString("F2")</span>
                                    <small class="text-muted d-block">@product.StockQuantity in stock</small>
                                </div>
                                <div class="text-end">
                                    <div class="rating mb-1">
                                        @{
                                            var rating = 4.5; // This would come from product reviews
                                            for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(rating))
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else if (i == Math.Ceiling(rating) && rating % 1 > 0)
                                                {
                                                    <i class="fas fa-star-half-alt text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-warning"></i>
                                                }
                                            }
                                        }
                                        <small class="text-muted ms-1">(@rating)</small>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="d-grid gap-2">
                                @if (product.StockQuantity > 0)
                                {
                                    <button class="btn buy-btn text-white" 
                                            onclick="buyProduct(@product.Id, '@product.Name.Replace("'", "\\'")', @product.Price)">
                                        <i class="fas fa-shopping-cart me-2"></i> Buy Now
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary" disabled>
                                        <i class="fas fa-ban me-2"></i> Out of Stock
                                    </button>
                                }
                                
                                <button class="btn btn-outline-primary" onclick="showProductDetails(@product.Id)">
                                    <i class="fas fa-info-circle me-2"></i> Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Products Summary -->
        <div class="mt-5 pt-4 border-top">
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center p-3">
                        <i class="fas fa-shipping-fast fa-2x text-primary mb-3"></i>
                        <h5>Free Shipping</h5>
                        <p class="text-muted small">On orders over $100</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-3">
                        <i class="fas fa-undo fa-2x text-primary mb-3"></i>
                        <h5>30-Day Returns</h5>
                        <p class="text-muted small">Easy return policy</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-3">
                        <i class="fas fa-shield-alt fa-2x text-primary mb-3"></i>
                        <h5>Secure Payment</h5>
                        <p class="text-muted small">100% secure checkout</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Buy Product Function
        function buyProduct(productId, productName, price) {
            if (!confirm(`Confirm purchase: ${productName} - $${price}?`)) {
                return;
            }
            
            const buyBtn = event.target;
            const originalText = buyBtn.innerHTML;
            
            // Show loading state
            buyBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Processing...';
            buyBtn.disabled = true;
            
            // Purchase data
            const purchaseData = {
                productId: productId,
                productName: productName,
                price: price,
                quantity: 1
            };
            
            // Send to backend API
            fetch('/api/Purchases', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(purchaseData)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Show success message
                    showNotification('success', `? ${data.message}`);
                    
                    // Update stock display (simulate)
                    const stockElement = buyBtn.closest('.card-body').querySelector('.text-muted small');
                    if (stockElement) {
                        const currentStock = parseInt(stockElement.textContent.match(/\d+/)[0]);
                        if (currentStock > 0) {
                            stockElement.textContent = `${currentStock - 1} in stock`;
                        }
                    }
                    
                    // Ask to view history
                    setTimeout(() => {
                        if (confirm('Purchase successful! Would you like to view your purchase history?')) {
                            window.location.href = '/Home/BuyHistory';
                        }
                    }, 500);
                } else {
                    showNotification('error', `? ${data.message}`);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('error', 'An error occurred. Please try again.');
            })
            .finally(() => {
                // Restore button
                buyBtn.innerHTML = originalText;
                buyBtn.disabled = false;
            });
        }
        
        // Filter products by category
        document.querySelectorAll('[data-category]').forEach(button => {
            button.addEventListener('click', function() {
                // Update active button
                document.querySelectorAll('[data-category].active').forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                const category = this.dataset.category;
                const products = document.querySelectorAll('#productsGrid > div');
                
                products.forEach(product => {
                    if (category === 'all' || product.dataset.category === category) {
                        product.style.display = 'block';
                    } else {
                        product.style.display = 'none';
                    }
                });
            });
        });
        
        // Product details modal (simplified version)
        function showProductDetails(productId) {
            alert('Product details feature coming soon!');
            // In a real app, this would open a modal with detailed product info
        }
        
        // Notification function
        function showNotification(type, message) {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 end-0 m-3`;
            notification.style.zIndex = '9999';
            notification.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    <span>${message}</span>
                    <button type="button" class="btn-close ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }
    </script>
}

