@{
    ViewData["Title"] = "Purchase History";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Purchase History</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-size: 2.5rem;
        }
        
        .back-btn {
            display: inline-block;
            padding: 10px 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 10px;
            margin-bottom: 20px;
            font-weight: 600;
        }
        
        .history-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        .history-table th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px;
            text-align: left;
        }
        
        .history-table td {
            padding: 15px;
            border-bottom: 1px solid #ddd;
        }
        
        .history-table tr:hover {
            background-color: rgba(102, 126, 234, 0.1);
        }
        
        .status-completed {
            color: #4CAF50;
            font-weight: 600;
        }
        
        .status-pending {
            color: #FF9800;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="back-btn">← Back to Dashboard</a>
        <a href="/Home/Products" class="back-btn" style="margin-left: 10px;">← View Products</a>
        
        <h1>Purchase History</h1>
        
        <table class="history-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#ORD001</td>
                    <td>2024-12-01</td>
                    <td>Gaming Laptop</td>
                    <td>1</td>
                    <td>$1999.99</td>
                    <td class="status-completed">Completed</td>
                </tr>
                <tr>
                    <td>#ORD002</td>
                    <td>2024-12-05</td>
                    <td>Wireless Headphones</td>
                    <td>2</td>
                    <td>$499.98</td>
                    <td class="status-completed">Completed</td>
                </tr>
                <tr>
                    <td>#ORD003</td>
                    <td>2024-12-10</td>
                    <td>Smart Watch</td>
                    <td>1</td>
                    <td>$299.99</td>
                    <td class="status-pending">Pending</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
