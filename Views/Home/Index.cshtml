@{
    ViewData["Title"] = "Home - ShopSphere";
}

<div class="hero-section">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold">Welcome to ShopSphere</h1>
            <p class="lead">Discover amazing products at unbeatable prices. Your perfect shopping experience starts here.</p>
            <a href="/Products" class="btn btn-light btn-lg">
                <i class="bi bi-bag"></i> Shop Now
            </a>
        </div>
        <div class="col-lg-6 text-center">
            <i class="bi bi-cart4" style="font-size: 8rem; opacity: 0.8;"></i>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="stat-number">50+</div>
            <div class="stat-label">Products</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="stat-number">1000+</div>
            <div class="stat-label">Customers</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Support</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="stat-number">99%</div>
            <div class="stat-label">Satisfaction</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-star"></i> Featured Products</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card product-card">
                            <div class="product-image">
                                <i class="bi bi-laptop"></i>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Gaming Laptop</h5>
                                <p class="card-text">High-performance laptop with latest graphics card and processor.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="price-tag">$1999.99</span>
                                    <span class="stock-badge in-stock">In Stock</span>
                                </div>
                                <button class="btn btn-primary w-100 mt-3">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-4">
                        <div class="card product-card">
                            <div class="product-image">
                                <i class="bi bi-headphones"></i>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Wireless Headphones</h5>
                                <p class="card-text">Noise-cancelling wireless headphones with 30-hour battery life.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="price-tag">$249.99</span>
                                    <span class="stock-badge in-stock">In Stock</span>
                                </div>
                                <button class="btn btn-primary w-100 mt-3">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-4">
                        <div class="card product-card">
                            <div class="product-image">
                                <i class="bi bi-smartwatch"></i>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Smart Watch</h5>
                                <p class="card-text">Fitness tracker with heart rate monitor and GPS tracking.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="price-tag">$299.99</span>
                                    <span class="stock-badge low-stock">Low Stock</span>
                                </div>
                                <button class="btn btn-primary w-100 mt-3">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-truck"></i> Fast Delivery</h4>
            </div>
            <div class="card-body">
                <p>Enjoy fast and reliable delivery services to your doorstep. We deliver within 2-3 business days.</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-shield-check"></i> Secure Payment</h4>
            </div>
            <div class="card-body">
                <p>Your payments are secure with our encrypted payment gateway. Multiple payment options available.</p>
            </div>
        </div>
    </div>
</div>
